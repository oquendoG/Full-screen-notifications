<Window x:Name="MainWindowApp" x:Class="Notificaction.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notificaction"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized" HorizontalAlignment="Center" VerticalAlignment="Center" WindowStyle="None" Background="#FF2F2F2F">
    <Grid Width="1280" Height="720" FlowDirection="RightToLeft">
        <Grid.RowDefinitions>
            <RowDefinition Height="79*"/>
            <RowDefinition Height="271*"/>
        </Grid.RowDefinitions>
        <Image x:Name="MainImage" HorizontalAlignment="Center" Height="720"
               VerticalAlignment="Center"
               Loaded="MainImage_Loaded" Panel.ZIndex="1"
               RenderTransformOrigin="1.52,0.453" Grid.RowSpan="2"
               Margin="0,0,0,0"/>

        <Button x:Name="btnAtras" Panel.ZIndex="10"
                Content="Anterior"
                HorizontalAlignment="Left"
                Margin="1136,462,0,0"
                VerticalAlignment="Top"
                Width="99" Height="34"
                Click="Button_ClickPrevious" FontFamily="Roboto"
                FontSize="16" Opacity="0.89"
                OpacityMask="White" Background="White"
                BorderBrush="Transparent" Cursor="Hand" Grid.Row="1" />

        <Button x:Name="btnSiguiente" Panel.ZIndex="10"
                Content="Siguiente" HorizontalAlignment="Left"
                Margin="30,462,0,0" VerticalAlignment="Top" Width="99"
                Height="34" Click="Button_ClickNext" FontFamily="Roboto"
                FontSize="16" Opacity="0.89" OpacityMask="White" Background="White"
                BorderBrush="Transparent" SnapsToDevicePixels="True" Cursor="Hand"
                Grid.Row="1"/>
        <Button Content="" HorizontalAlignment="Left" Margin="24,22,0,0" VerticalAlignment="Top" Click="Button_Click" Height="34" Width="34" Panel.ZIndex="20" IsCancel="True">
            <Button.Foreground>
                <ImageBrush ImageSource="/close.png"/>
            </Button.Foreground>
            <Button.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="/close-small.png"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
